<header class="header">
    {% block header %}
            
            <nav id="access" class="navbar navbar-fixed-top" role="navigation">
                <div class="container">
                    <div class="navbar-header">
                      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                      </button>
                      <a class="navbar-brand" href="/" rel="home">{{bloginfo('name')}}</a>
                    </div>

                    <div class="navbar-collapse collapse" role="navigation">
                        <ul class="nav navbar-nav">
                        {% for item in menu.get_items %}
                            <li class="nav-main-item {{item.class}} {{item.current ? 'custom-current-item-class'}}">
                                <a {% if item.get_children %}class="dropdown-toggle" data-toggle="dropdown"{% endif %} href="{{item.get_path}}">{{item.title}}</a>
                                {% if item.get_children %}
                                    <ul class="dropdown-menu">
                                      {% for child in item.get_children %}
                                        <li class="dropdown-item"><a href="{{child.get_path}}">{{child.title}}</a></li>
                                      {% endfor %}
                                    </ul>
                                 {% endif %}
                            </li>
                        {% endfor %}
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div>

            </nav><!-- #access -->
    
    {% endblock %}
</header>