{% extends "base.twig" %}

{% block content %}
	<div class="row">
		<div id="navside" class="col-md-3">
	 		ACTU BAR
		</div>
		<div class="col-md-9 page-content pull-right" role="main">
			{% for post in posts %}
				<article class="actu" id="actu-{{post.ID}}">
					<h2 class="h2">{{post.title}}</h2>
					<p>{{post.content}}</p>

					{% if post.get_thumbnail %}
						<img src="{{post.thumbnail.src}}" />
					{% endif %}
				</article>
			{% endfor %}
		</div>
    </div>             
{% endblock %}