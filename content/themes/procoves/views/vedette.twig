<!-- Slider Thumbs  -->
<div id="thumbslider-wrap">
	
	<h2><span class="redline"></span>Nos Produits</h2>

	<div class="container thumbslider">
	      	<ul class="slides">
	      		{% for produit in produits %}
		      	<li onclick="window.location='{{produit.link}}'">
	      			<div class="caption_overlay">
						<h4>{{produit.title}}</h4>	
					</div>
		      		<img src="{{TimberImage(produit.img_prod)}}">
			    </li>
			    {% endfor %}
		    </ul>
    </div>
</div>	

<!-- a la une  -->
<div class="a-la-une">
	<div class="container">
		<div class="row">
			
			<div class="col-md-6 actu-tease">
				<h2>Actualites</h2>
				<div class="row">
					<div class="col-md-6 actu-img">
						<img class="actu" src="{{actu.get_thumbnail.get_src}}" />
					</div>
					<div class="col-md-6 actu-body">
						<h4>{{ actu.title }}</h4>
						<p class="date">
							<span>{{ actu.display_date }}</span>
						</p>
						<p>{{actu.get_preview(80, true,'En savoir Plus')}}</P>
					</div>
				</div>
			</div>

			<div class="col-md-6 contact">
				<h2>Contact</h2>
				<p>{{adresse | print_r}}<br>
					<a href="mailto:{{email | print_r}}">{{email | print_r}}</a>
				</p>			
			</div>

		</div>
		
	</div>
</div>