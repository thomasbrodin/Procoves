<header class="header">
    <div class="container">
    {% block header %}
            
      <nav id="access" class="navbar" role="navigation">
        <div class="container">

          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/" rel="home">
              <img src="{{logo_procoves}}">
            </a>
            <span class="navbar-name">
              <h2>{{site.title}}</h2>
            </span>       
          </div>

          <div class="navbar-collapse collapse" role="navigation">
              <ul class="nav navbar-nav">
              {% for item in menu.get_items %}
                  <li class="nav-main-item {{item.current ? 'current-item'}}" data-index="left{{item.ID}}">
                      <a {% if item.get_children %}class="dropdown-toggle" data-toggle="dropdown"{% endif %} href="{{item.get_path}}">{{item.title}}</a>
                      {% if item.get_children %}
                          <ul class="dropdown-menu">
                            {% for child in item.get_children %}
                              <li class="dropdown-item"><a href="{{child.get_path}}">{{child.title}}</a></li>
                            {% endfor %}
                          </ul>
                       {% endif %}
                  </li>
              {% endfor %}
              </ul>
          </div><!-- /.navbar-collapse -->
          
          <div class="indicator">
              <div id="access-js-slider"></div>
          </div> 

        </div>

        <div id="block-lang-search">
          
          <form action="/" method="get" role="search">
            <input type="text" class="form-control sidebar-top" value="Rechercher" name="s" onfocus="if (this.value=='Rechercher') this.value='';">
          </form>
            
            <ul class="lang-switch">
              {% for lang in languages %} 
                {% if lang.active %}      
                  <li class="lang-id"><a href="{{lang.url}}">{{lang.native_name}}</a>
                    <i data-toggle="collapse" data-target="#lang-list" class="angle-down"></i>
                      <ul id="lang-list" class="collapse">
                          {% for lang in languages %} 
                            {% if lang.active == 0 and lang.missing == 0 %}    
                              <li><a href="{{lang.url}}">{{lang.native_name}}</a></li>
                            {% endif %}
                          {% endfor %}
                      </ul>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          
        </div>
      </nav><!-- #access -->

    {% endblock %}
    </div>
</header>